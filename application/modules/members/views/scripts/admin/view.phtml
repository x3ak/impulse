    <div class="member-info-box box-xl last-box">
        <table class="admin-table-list">
            <tr class="title">
                <th><?php echo $this->translate('visit_day');?></th>
                <th><?php echo $this->translate('enter_time');?></th>
                <th><?php echo $this->translate('exit_time');?></th>
            </tr>
