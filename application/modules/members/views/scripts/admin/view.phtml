                echo $this->link('finish_visit', $this->url(array('module'=>'members','controller'=>'visit','action'=>'finish', 'member'=>$member->id), 'default', true), array('class'=>'button red-button modal-dialog-link dialog-size-s', 'id'=>'add-subscription'));
