            /** @var $visit Members_Model_Mapper_Visit */
            foreach(Members_Model_DbTable_Visit::getInstance()->getRecentVisits($member) as $k => $visit):
                    ?>
                    <tr>
                        <td><?php echo $this->link(date('d.m.Y', strtotime($visit->day)), $this->url(array('module'=>'members','controller'=>'visit','action'=>'view','id'=>$visit->id), 'default', true), array('class'=>'modal-dialog-link dialog-size-s'));?></td>
